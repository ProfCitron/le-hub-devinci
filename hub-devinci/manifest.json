{
    "manifest_version": 2,
    "name": "Le hub Devinci",
    "version": "1.0",
  
    "description": "Le hub Devinci vous propose régulièrement un restylage du portail en fonction de ses évolutions",
  
    "icons": {
      "48": "Logo_De_Vinci_fd_noir.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.leonard-de-vinci.net/*"],
        "js": ["build/all.js"],
        "css": ["build/all.css"]
      }
    ],
    "browser_action": {
      "default_popup": "html/popup.html"
    }
  }